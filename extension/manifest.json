{
  "name": "WebPG",
  "version": "0.8.4",
  "description": "An extension which provides GnuPG/GPG/PGP related functions to Chrome",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "web_accessible_resources": [
      "webpg_results.html",
      "webpg_results.js",
      "dialog.html",
      "dialog.js",
      "skin/gmail_overlay.css",
      "skin/images/menumask.png",
      "skin/images/webpg-48.png",
      "skin/images/badges/stock_encrypted.png",
      "skin/images/badges/stock_encrypted_signed.png",
      "skin/images/badges/stock_signature-ok.png",
      "skin/images/badges/stock_decrypted-signature-bad.png"
  ],
  "background": {
      "scripts": [
        "constants.js",
        "utils.js",
        "preferences.js",
        "background.js"
      ]
  },
  "options_page": "options.html?auto_init=true",
  "icons": {
      "16": "skin/images/webpg-16.png",
      "32": "skin/images/webpg-32.png",
      "48": "skin/images/webpg-48.png",
      "64": "skin/images/webpg-64.png",
      "96": "skin/images/webpg-96.png",
      "128": "skin/images/webpg-128.png"
   },
  "permissions": [
       "<all_urls>",
       "tabs",
       "notifications",
       "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "jquery/js/jquery-1.7.2.min.js",
        "constants.js",
        "utils.js",
        "inline.js",
        "webpg_overlay.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": [ "https://mail.google.com/*", "http://mail.google.com/*" ],
      "js": [
        "jquery/js/jquery-1.7.2.min.js",
        "constants.js",
        "utils.js",
        "preferences.js",
        "gmail.js"
      ],
      "css": ["skin/gmail_overlay.css"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_icon": "skin/images/webpg-32.png",
    "default_title": "WebPG",
    "default_popup": "browser_action_menu.html"
  },
  "plugins": [
      { "path": "plugins/Darwin_x86-gcc/npwebpgPlugin-v0.6.0.plugin", "public": false },
      { "path": "plugins/Linux_x86_64-gcc/npwebpgPlugin-v0.6.0.so", "public": false },
      { "path": "plugins/Linux_x86-gcc/npwebpgPlugin-v0.6.0.so", "public": false },
      { "path": "plugins/WINNT_x86-msvc/npwebpgPlugin-v0.6.0.dll", "public": false }
  ]
}
