{
  "name": "WebPG - GnuPG browser interface",
  "version": "0.4.1",
  "description": "An extension which provides GnuPG related functions to the browser",
  "background_page": "background.html",
  "icons": {
      "16": "images/webpg-16.png",
      "32": "images/webpg-32.png",
      "48": "images/webpg-48.png",
      "64": "images/webpg-64.png",
      "96": "images/webpg-96.png",
      "128": "images/webpg-128.png"
   },
  "permissions": [
       "<all_urls>",
       "tabs",
       "notifications",
       "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery/js/jquery-1.5.1.min.js", "webpg.js"],
      "run_at": "document_end"
    }
  ],
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "images/webpg-32.png",
    "default_title": "WebPG",
    "default_popup": "browser_action_menu.html"
  },
  "plugins": [
      { "path": "plugins/Darwin_x86-gcc/npwebpgPlugin-v0.3.8.plugin", "public": false },
      { "path": "plugins/Linux_x86-gcc3/npwebpgPlugin-v0.3.8.so", "public": false },
      { "path": "plugins/WINNT_x86-msvc/npwebpgPlugin-v0.3.8.dll", "public": false }
  ]
}
